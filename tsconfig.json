{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true,
    "transpileOnly": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "scripts/**/*.ts",
    "scripts/**/*.js"
  ],
  "exclude": ["node_modules"]
}

